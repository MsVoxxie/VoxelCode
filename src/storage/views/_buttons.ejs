<head>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.css" />
</head>

<div class="buttons-wrapper">
	<a href="/" class="logo">VCode</a>
	<div class="buttons">
		<a href="/new" class="btn">New File <i class="bi bi-file-earmark-plus"></i></a>
		<% if (locals.canSave) { %>
		<button class="btn" type="submit">Save File <i class="bi bi-box-arrow-down"></i></button>
		<% } %> <% if (locals.id != null) { %>
		<a href="<%= locals.id %>/duplicate" class="btn">Duplicate File <i class="bi bi-clipboard-check"></i></a>
		<% } %>
	</div>
</div>
